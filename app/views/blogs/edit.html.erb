<div class="title">
  <svg height="100" stroke="black" stroke-width="2" class="text-line" width="100%"><text x="50%" dominant-baseline="middle" text-anchor="middle" y="50%">Blog Editor</text></svg>
</div>

<section class="post-form">
  <%= form_tag "/blogs/#{@blog.id}", method: :patch do %>
    <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @blog.title %><br/>
    </div>
    <div class="form-group">
      <%= label_tag :image %>
      <%= text_field_tag :image, @blog.image %><br/>
    </div>
    <div class="form-group">
      <%= label_tag :body %>
      <%= text_area_tag :body, @blog.body, rows:10, cols:30 %><br/>
    </div>
    <p><%= submit_tag 'Update Blog' %></p>
  <% end %>
</section>